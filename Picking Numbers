from collections import Counter
def pickingNumbers(a):
    arr = Counter(a)
    maxi = 0
    for i in range(len(a)+1) :
        maxi = max(maxi, arr[i]+arr[i+1] ) 
        print(i,i+1,"-->",arr[i],arr[i+1])  
    return maxi
